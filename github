#python loops to draw figures
n=7;
m=8;
for i in range(n):
    for j in range(i):
        print ('* ', end="")
    print('')

for i in range(n,0,-1):
    for j in range(i):
        print('* ', end="")
    print('')
for i in range(m):
    for j in range(i):
        print ('* ', end="")
    print('')
for i in range(m,0,-2):
    for j in range(i):
        print('* ', end="")
    print('')
